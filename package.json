{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.0",
    "cpy-cli": "^2.0.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "cssnano-cli": "^1.0.5",
    "node-sass": "^4.9.3",
    "postcss-cli": "^6.0.0"
  },
  "scripts": {
    "cleanup:css": "rimraf src/assets/css",
    "cleanup:js": "rimraf src/assets/js",
    "css:sass": "node-sass src/src/css -o src/assets/css",
    "css:postcss": "postcss src/assets/css/**/*.css -r --no-map -c=postcss.config.js",
    "minify:css:front": "cssnano src/assets/css/wp-oembed-blog-card.css src/assets/css/wp-oembed-blog-card.min.css --no-zindex",
    "minify:css:embed": "cssnano src/assets/css/gutenberg-embed.css src/assets/css/gutenberg-embed.min.css --no-zindex",
    "css": "npm-run-all -s cleanup:css css:sass css:postcss minify:css:front minify:css:embed",
    "js:build": "webpack src/src/js/wp-oembed-blog-card.js -o src/assets/js/wp-oembed-blog-card.min.js --config webpack.config.js",
    "js": "npm-run-all -s cleanup:js js:build",
    "start": "npm run build",
    "build": "npm-run-all -p css js",
    "postinstall": "npm run build"
  }
}
